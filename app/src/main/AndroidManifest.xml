<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dejan.weatherforcast" >


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
       >
        <activity
            android:name=".StartApp"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dejan.weatherforcast.WeatherForecast"
            android:label="@string/title_activity_weather__forcast"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.dejan.weatherforcast.CityList"
            android:label="@string/title_activity_city_list"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.dejan.weatherforcast.NewCity"
            android:label="@string/title_activity_new_city"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
